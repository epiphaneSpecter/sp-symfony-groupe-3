{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    {% include '_partials/header.html.twig' %}

    <section class="eblog-featured-post-area area-2 tp-section-gap">
        <div class="container">
            <div class="section-inner">
                <div class="row g-5">
                    {% for post in posts %}
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="eblog-featured-news style-two small">
                            <div class="image-area">
                                <a href="#"><img src="{{ asset('images/blog/38.jpg') }}" alt=""></a>
                            </div>
                            <div class="blog-content text-left">
                                <p class="tag mb--15">Music</p>
                                <h4 class="heading-title ml--0 mb--10 text-start"><a class="title-animation text-center" href="{{ path('app_show_post', { 'id': post.id }) }}">{{ post.title }}</a></h4>
                                <ul class="blog-meta justify-content-start m--0">
                                    <li class="author">Post√© le: {{ post.createdAt|date('d-m-Y') }} <span>Par</span> :  {{ post.author.email}}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    {% include '_partials/footer.html.twig' %}

{% endblock %}
